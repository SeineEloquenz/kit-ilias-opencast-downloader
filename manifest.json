{
  "name": "Kit Ilias OpenCast Downloader",
  "author": "Alexander Linder",
  "version": "1.4",
  "description": "Downloads lecture recordings from KIT Ilias",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": {
      "128": "icon128.png"
    },
    "default_title": "Download video"
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://ilias.studium.kit.edu/*"],
    "run_at": "document_end"
  }],
  "manifest_version": 2
}
